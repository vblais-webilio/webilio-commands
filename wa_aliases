alias wa='webilioAlias'

webilioAlias() {
  if [ -z "$1" ]; then
    webilioHelp;
    return 1
  fi
  scriptName=$1
  shift
  sh -c "$(curl -fsSL https://raw.githubusercontent.com/webilio-xyz/webilio-commands/main/bin/$scriptName.sh) $@"
}

webilioHelp() {
  RED='\033[0;31m'
  NC='\033[0m' # No Color
  GREEN='\033[0;32m'
  YELLOW='\033[0;33m'
  BGreen='\033[1;32m'
  echo "Usage: wa <scriptName>"
  echo "${BGreen}Here is a list of all available commands:${NC}"
  echo "${YELLOW}install${NC}: Install all of these command locally (recommanded)."
  echo "${YELLOW}sail${NC}: Execute a sail command."
  echo "${YELLOW}sail-composer${NC}: Install composer dependencies via a sail container. Can specify an argument like 81 for php8.1"
  echo "${YELLOW}seeder${NC}: Run a db:fresh and default seeder for the app"

}